<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="60 seconds" debug="false">
    <springProperty scope="context" name="app.name" source="spring.application.name"/>

    <!--  日志存放路径  -->
    <springProperty scope="context" name="log.path" source="com.github.fanzezhen.common.log.file.path" defaultValue="logs"/>
    <!--  日志格式  -->
    <springProperty scope="context" name="log.pattern" source="com.github.fanzezhen.common.log.pattern"
                    defaultValue="%contextName %d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] [%X{traceId}] %-5level %logger{36} - %msg%n"/>

    <!--  trace  -->
    <!-- 日志单个文件大小   -->
    <springProperty scope="context" name="trace.max.file.size" source="com.github.fanzezhen.common.log.level.trace.max-file-size"
                    defaultValue="500MB"/>
    <!-- 最大保存日期   -->
    <springProperty scope="context" name="trace.max.history" source="com.github.fanzezhen.common.log.level.trace.max-history"
                    defaultValue="30"/>
    <!-- 总日志文件大小   -->
    <springProperty scope="context" name="trace.total.size.cap" source="com.github.fanzezhen.common.log.level.trace.total-size-cap"
                    defaultValue="5GB"/>

    <!--  debug  -->
    <!-- 日志单个文件大小   -->
    <springProperty scope="context" name="debug.max.file.size" source="com.github.fanzezhen.common.log.level.debug.max-file-size"
                    defaultValue="500MB"/>
    <!-- 最大保存日期   -->
    <springProperty scope="context" name="debug.max.history" source="com.github.fanzezhen.common.log.level.debug.max-history"
                    defaultValue="30"/>
    <!-- 总日志文件大小   -->
    <springProperty scope="context" name="debug.total.size.cap" source="com.github.fanzezhen.common.log.level.debug.total-size-cap"
                    defaultValue="2GB"/>

    <!--  info  -->
    <!-- 日志单个文件大小   -->
    <springProperty scope="context" name="info.max.file.size" source="com.github.fanzezhen.common.log.level.info.max-file-size"
                    defaultValue="500MB"/>
    <!-- 最大保存日期   -->
    <springProperty scope="context" name="info.max.history" source="com.github.fanzezhen.common.log.level.info.max-history"
                    defaultValue="30"/>
    <!-- 总日志文件大小   -->
    <springProperty scope="context" name="info.total.size.cap" source="com.github.fanzezhen.common.log.level.info.total-size-cap"
                    defaultValue="2GB"/>

    <!--  warn  -->
    <!-- 日志单个文件大小   -->
    <springProperty scope="context" name="warn.max.file.size" source="com.github.fanzezhen.common.log.level.warn.max-file-size"
                    defaultValue="500MB"/>
    <!-- 最大保存日期   -->
    <springProperty scope="context" name="warn.max.history" source="com.github.fanzezhen.common.log.level.warn.max-history"
                    defaultValue="90"/>
    <!-- 总日志文件大小   -->
    <springProperty scope="context" name="warn.total.size.cap" source="com.github.fanzezhen.common.log.level.warn.total-size-cap"
                    defaultValue="1GB"/>

    <!--  error  -->
    <!-- 日志单个文件大小   -->
    <springProperty scope="context" name="error.max.file.size" source="com.github.fanzezhen.common.log.level.error.max-file-size"
                    defaultValue="500MB"/>
    <!-- 最大保存日期   -->
    <springProperty scope="context" name="error.max.history" source="com.github.fanzezhen.common.log.level.error.max-history"
                    defaultValue="180"/>
    <!-- 总日志文件大小   -->
    <springProperty scope="context" name="error.total.size.cap" source="com.github.fanzezhen.common.log.level.error.total-size-cap"
                    defaultValue="1GB"/>

    <contextName>${app.name}</contextName>

    <!--0. 日志格式和颜色渲染 -->
    <!-- 彩色日志依赖的渲染类 -->
    <conversionRule conversionWord="clr" converterClass="org.springframework.boot.logging.logback.ColorConverter"/>
    <conversionRule conversionWord="wex"
                    converterClass="org.springframework.boot.logging.logback.WhitespaceThrowableProxyConverter"/>
    <conversionRule conversionWord="wEx"
                    converterClass="org.springframework.boot.logging.logback.ExtendedWhitespaceThrowableProxyConverter"/>
    <!-- 彩色日志格式 -->
    <property name="CONSOLE_LOG_PATTERN"
              value="%contextName %d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] [%X{traceId}] %-5level %logger{36} - %msg%n"/>

    <!--1. 输出到控制台-->
    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <!--此日志appender是为开发使用，只配置最底级别，控制台输出的日志级别是大于或等于此级别的日志信息-->
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>debug</level>
        </filter>
        <encoder>
            <Pattern>${CONSOLE_LOG_PATTERN}</Pattern>
            <!-- 设置字符集 -->
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- trace -->
    <appender name="trace" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${log.path}/${app.name}.trace.%d{yyyy-MM-dd}-%i.log</fileNamePattern>
            <maxHistory>${trace.max.history}</maxHistory>
            <totalSizeCap>${trace.total.size.cap}</totalSizeCap>
            <maxFileSize>${trace.max.file.size}</maxFileSize>
        </rollingPolicy>
        <encoder>
            <pattern>${log.pattern}</pattern>
        </encoder>
    </appender>

    <!-- debug -->
    <appender name="debug" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${log.path}/${app.name}.debug.%d{yyyy-MM-dd}-%i.log</fileNamePattern>
            <maxHistory>${debug.max.history}</maxHistory>
            <totalSizeCap>${debug.total.size.cap}</totalSizeCap>
            <maxFileSize>${debug.max.file.size}</maxFileSize>
        </rollingPolicy>
        <encoder>
            <pattern>${log.pattern}</pattern>
        </encoder>
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>DEBUG</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
    </appender>

    <!-- info -->
    <appender name="info" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${log.path}/${app.name}.info.%d{yyyy-MM-dd}-%i.log</fileNamePattern>
            <maxHistory>${info.max.history}</maxHistory>
            <totalSizeCap>${info.total.size.cap}</totalSizeCap>
            <maxFileSize>${info.max.file.size}</maxFileSize>
        </rollingPolicy>
        <encoder>
            <pattern>${log.pattern}</pattern>
        </encoder>
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>INFO</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
    </appender>

    <!-- warn -->
    <appender name="warn" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${log.path}/${app.name}.warn.%d{yyyy-MM-dd}-%i.log</fileNamePattern>
            <maxHistory>${warn.max.history}</maxHistory>
            <totalSizeCap>${warn.total.size.cap}</totalSizeCap>
            <maxFileSize>${warn.max.file.size}</maxFileSize>
        </rollingPolicy>
        <encoder>
            <pattern>${log.pattern}</pattern>
        </encoder>
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>WARN</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
    </appender>

    <!-- error -->
    <appender name="error" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${log.path}/${app.name}.error.%d{yyyy-MM-dd}-%i.log</fileNamePattern>
            <maxHistory>${error.max.history}</maxHistory>
            <totalSizeCap>${error.total.size.cap}</totalSizeCap>
            <maxFileSize>${error.max.file.size}</maxFileSize>
        </rollingPolicy>
        <encoder>
            <pattern>${log.pattern}</pattern>
        </encoder>
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>ERROR</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
    </appender>

    <root level="debug">
        <appender-ref ref="console"/>
        <appender-ref ref="info"/>
        <appender-ref ref="warn"/>
        <appender-ref ref="error"/>
        <appender-ref ref="debug"/>
        <appender-ref ref="trace"/>
    </root>

</configuration>
